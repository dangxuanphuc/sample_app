<li id="<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.micropost_gravatar_size), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= time_ago_in_words(micropost.created_at) %> <%= t ".ago" %>
    <% if micropost.user.current_user? current_user %>
      <%= link_to t(".delete"), micropost, method: :delete,
        data: { confirm: t(".you_sure") } %>
    <% end %>
  </span>
</li>
