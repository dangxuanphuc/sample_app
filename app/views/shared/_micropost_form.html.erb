<%= form_for(@micropost) do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t(".placeholder") %>
  </div>
  <%= f.submit t(".post"), class: "btn btn-primary" %>
  <span class="picture">
    <%= f.file_field :picture, accept: "image/jpeg,image/gif,image/png" %>
  </span>
<% end %>

<script type="text/javascript">
  $('#micropost_picture').bind("change", function() {
    var size_in_megabytes = this.files[0].size/Settings.size_byte/Settings.size_byte;
    if (size_in_megabytes > Settings.picture_size) {
      alert(t ".alert_maximum_size");
    }
  });
</script>
